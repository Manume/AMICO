<div class="row">
  
    <%= form_for(@feedback) do |f| %>
      <% if @feedback.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

          <ul>
          <% @feedback.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <center>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-1">
        <%#= f.label :name %>
        <%= f.text_field :name,class: "form-control",placeholder: "Your Name" %><br>
      </div>
      </div>
      <div class="form-group">
            <div class="col-md-10 col-md-offset-1">
        <%#= f.label :feedback %>
        <%= f.text_area :comment,class: "form-control",placeholder: "Song name or Album name or your feedback" %><br>
        </div>
      </div>
      <div class="form-group">
            <div class="col-md-10 col-md-offset-1">
        <%= f.submit "feedback", class: "btn btn-info"%>
        </div>
      </div>
      </center>
    <% end %>
  
</div>

