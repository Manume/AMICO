



<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <center><h4 class="modal-title special" id="myModalLabel">Special Thanks</h4></center>
      </div>
      <div class="modal-body">         
        <% @posts.each do |post| %>
          <div class="row">
            <div class="col-md-2"></div>  
            <div class="col-md-8">
              <center>
                <h3 style="color:black;"><%= post.name %></h3>
              <td><%= image_tag post.post_image_url(:thumb),class: "img-circle img-responsive" %></td>
              </center>  
              <h5 class="text-info"><i><%= post.description%></i></h5>
            </div>  
            <div class="col-md-2"></div>
          </div>
        <%end%> 
        <%#= link_to 'New Post', new_post_path %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>       
      </div>
    </div>
  </div>
</div>



